@model Question_Bank.Models.MCQ_Question_Model

@{
    ViewBag.Title = "MCQ_Question";
}

<!-- Custom fonts for this template-->
<link href="~/Design/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

<!-- Custom styles for this template-->
<link href="~/Design/CSS/sb-admin-2.css" rel="stylesheet">


<!-- Bootstrap core JavaScript-->
<script src="~/Design/vendor/jquery/jquery.min.js"></script>
<script src="~/Design/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="~/Design/vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="~/Design/JS/sb-admin-2.min.js"></script>
<script src="~/Design/project.js"></script>
<link href="~/Design/Sweetalert/sweetalert2.css" rel="stylesheet" />
<script src="~/Design/Sweetalert/sweetalert2.js"></script>
<script src="~/Design/JS/Project_JS/MCQ_Question.js"></script>

<style>
    body {
        height: 100vh;
    }

    body {
        min-height: 100vh;
    }

    input[type=checkbox] {
        accent-color: green;
    }
</style>


<body id="page-top">
    <form id="student">
        <div id="wrapper">

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">
                    <div class="row justify-content-center navbar p-0 text-center" style="background-color:var(--brand);">
                        <!-- Content Column -->
                        <div class="col-lg-1 ">
                            <img src="~/Design/Images/MSBSHSE-LOGO.png" class="" style="width:68px;" />
                        </div>

                        <!-- Content Column -->
                        <div class="col-lg-9 pl-0">
                            <h3 class="" style="color:#fff;margin-left:20px; font-family:'Times New Roman', Times, serif">
                                Maharashtra State Board of Secondary and Higher Secondary Education
                            </h3>
                        </div>

                        <div class="col-lg-2 text-white">
                            <p class="m-0">Current Time : <b id="time" class="text-warning"></b></p>
                            <p class="m-0">Time Remaining : <b id="demo" class="countdown text-warning"></b></p>

                        </div>
                    </div>

                    <div class="intro mt-2">
                        <div class="row">
                            <div class="col-lg-4 col-sm-4"><p>Seat No. : <b id="Seat_No" name="Seat_No">@Model.Login.Seat_No</b></p></div>
                            <div class="col-lg-4 col-sm-4"><p>Index No. :<b id="Index_No" name="Index_No">@Model.Login.Index_No</b></p></div>
                            <div class="col-lg-3 col-sm-3"><p>Paper No. :<b id="Paper_No" name="Paper_No">@Model.Login.Paper_ID</b></p></div>
                            <div class="col-lg-1 col-sm-1 btn btn-danger btn-block" style="width:50px" id="lgout" href="#" data-toggle="modal" data-target="#logoutModal">
                                End Exam
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-lg-4 col-sm-4"><p>Subject Code :<b id="Sub_Code" name="Sub_Code">@Model.Login.Sub_Code</b></p></div>
                            <div class="col-lg-4 col-sm-4"><p>Batch :<b> @Model.Login.Batch</b></p></div>
                            <div class="col-lg-4 col-sm-4"><p>IC Status :<b id="ics" style="color:green;"></b></p></div>
                        </div>
                    </div>

                    <h3 align="center">Question 3</h3><br>


                    <div id="menu2" class="form-body" style="padding:20px">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3" id="togg_sts" data-toggle="collapse" data-target="#exam_status" aria-expanded="false" aria-controls="exam_status">
                                        <h6 class="m-0 font-weight-bold text-primary">Status</h6>
                                    </div>
                                    <div class="card-body" overflow-y:auto;" id="exam_status">
                                        <table class="table table-bordered status-table">
                                            <tbody>
                                                <tr>
                                                    <td width="70px">
                                                        <br>
                                                        <a href="#" class="btn btn-primary">Q3</a>
                                                    </td>
                                                    <td>
                                                        @{int b = 1, cnt3 = 1; }
                                                        <br>
                                                        <div class="row">

                                                            @foreach (var item in Model.tbl_Question_Papers)
                                                            {
                                                                if (Model.tbl_Q3.Any(a => a.Question_ID == item.Question_ID && a.Active == 1))
                                                                {
                                                                    <br><br><div class="checkbox  checkbox-success">
                                                                        <input id="check_@item.ID" type="checkbox" class="styled" checked>
                                                                        <label for="chk_@item.ID">
                                                                            @cnt3
                                                                        </label>
                                                                    </div>
                                                                    b++;
                                                                    cnt3++;
                                                                }
                                                                else
                                                                {
                                                                    <br><br><div class="checkbox  checkbox-danger">

                                                                        <input id="check_@item.ID" type="checkbox" class="styled" checked>
                                                                        <label for="chk_@item.ID">
                                                                            @cnt3
                                                                        </label>
                                                                    </div>
                                                                    b++;
                                                                    cnt3++;
                                                                }

                                                                if (b % 6 == 0)
                                                                {
                                                                @:</div><div class="row">
                                                                    b = 1;
                                                                }
                                                            }
                                                        </div><br>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <div class="col-lg-9">
                                <table id="mcq_q3" class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th><b>Q.No.</b></th>
                                            <th><b>Questions</b></th>
                                        </tr>
                                    </thead>
                                    <tbody id="q3_body">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div><br><br>
                <div>
                    <center>
                        <input type="button" class="btn btn-primary" value="Previous" id="prev" />
                        <input type="button" class="btn btn-success" value="Submit" id="btn_q3_submit" />
                        <input type="button" class="btn btn-primary" value="Next" id="next" />
                    </center>
                </div><br><br>
            </div>
        </div>
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Are You Sure?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">Are you sure you want to END the exam!</div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-primary" id="end_exm" value="END">
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>